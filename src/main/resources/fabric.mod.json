{
	"schemaVersion": 1,
	"id": "lootshare",
	"version": "${version}",
	"name": "LootShare",
	"description": "Allows players to lootshare drops from properly tagged entities.",
	"authors": [
		"Myriantics"
	],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/myriantics/lootshare"
	},
	"license": "CC0-1.0",
	"icon": "assets/lootshare/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
          "net.myriantics.lootshare.LootShareCommon"
		],
		"client": [
			"net.myriantics.lootshare.LootShareClient"
		],
		"fabric-datagen": [
			"net.myriantics.lootshare.LootShareDataGenerator"
		]
	},
	"mixins": [
		"lootshare.mixins.json",
		{
			"config": "lootshare.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.17.2",
		"minecraft": "~1.21.1",
		"java": ">=21",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
}